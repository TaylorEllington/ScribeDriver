<Window x:Class="ScribeDriver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="375" Width="280">

    <StackPanel Orientation="Vertical" >
        <GroupBox Header="Template Information" Margin="0,0,0,5" >
            <TextBox Text="profileName&#x0a;vCount&#x0a;hCount&#x0a;hBorder&#x0a;vBorder&#x0a;hSpacing&#x0a;vSpacing&#x0a;chipWidth&#x0a;chipHeight; ">
            </TextBox>   
        </GroupBox>
        <Button Margin="5,0,5,5" > Configure Template</Button>
        
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="60"/>
                <ColumnDefinition  Width="auto"/>
                <ColumnDefinition  Width="60"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!-- content for print status -->
            
            <TextBox VerticalAlignment="Center" Grid.Row="0" Grid.Column="1">80</TextBox>
            
            <TextBlock VerticalAlignment="Center" Grid.Row="0" Grid.Column="2">of </TextBlock>
            
            <TextBox VerticalAlignment="Center" Grid.Row="0" Grid.Column="3">80</TextBox>
        </Grid>

        <TextBox Margin="0,5,0,5" > Starting value</TextBox>
        <!--Primary fucntion buttons -->

        <Button Height="60" FontSize="30" Margin="5,0,5,5" >Scribe</Button>
        <Button Height="30" FontSize="20" Margin="5,0,5,5" >Lock </Button>
        
        
    </StackPanel>
</Window>
